{
  "name": "ui",
  "version": "1.0.0",
  "license": "MIT",
  "author": "scaleflex",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scaleflex/ui"
  },
  "homepage": "https://github.com/scaleflex/ui#readme",
  "scripts": {
    "start": "start-storybook -s .storybook/public -p 9009",
    "format": "prettier --check packages/**/*.{ts,tsx}",
    "lint": "eslint --quiet --color packages/**/*.{ts,tsx}",
    "typecheck": "tsc -p ./tsconfig.ci.json",
    "prebuild:root": "rimraf packages/*/{lib,*.tsbuildinfo} dist",
    "prebuild:local": "lerna run prebuild",
    "prebuild": "npm-run-all -p prebuild:root prebuild:local",
    "clean-dist": "rm -rf dist",
    "build:dts": "tsc -b tsconfig.build.json",
    "build:js": "lerna exec -- babel src --out-dir lib --extensions .ts,.tsx --copy-files --root-mode upward",
    "build:storybook": "build-storybook --quiet -o dist",
    "build": "npm run clean-dist && npm-run-all -s build:dts -p build:js build:storybook",
    "pretest": "npm-run-all -p format lint typecheck",
    "test": "jest",
    "ci": "npm-run-all -s build",
    "bump": "lerna version --tag-version-prefix=''",
    "bump_prerelease": "lerna version prerelease --tag-version-prefix=''",
    "bump_prepatch_beta": "lerna version prepatch --tag-version-prefix='' --preid beta",
    "deploy": "npm-run-all build && gh-pages -d dist",
    "prerelease": "node scripts/create-meta-files.js",
    "release": "lerna exec --no-bail -- yarn publish lib --non-interactive",
    "cd": "npm-run-all -s deploy release"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.12.5",
    "@babel/preset-typescript": "^7.12.1",
    "@storybook/addon-docs": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addons": "^6.5.12",
    "@storybook/react": "^6.5.12",
    "@storybook/theming": "^6.5.12",
    "@svgr/webpack": "^5.4.0",
    "@testing-library/react": "^10.4.8",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-polished": "^1.1.0",
    "babel-plugin-styled-components": "^1.11.1",
    "babel-preset-react-app": "^9.1.2",
    "copyfiles": "^2.4.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.7",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-storybook": "^0.6.4",
    "eslint-plugin-unicorn": "^20.1.0",
    "gh-pages": "^3.1.0",
    "jest": "^26.3.0",
    "jest-styled-components": "^7.0.3",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "storybook-addon-breakpoints": "^1.0.0",
    "storybook-addon-jsx": "^7.3.14",
    "styled-components": "^5.1.0",
    "ts-jest": "^26.2.0",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^4.0.2",
    "webpack-bundle-analyzer": "^4.5.0"
  }
}
